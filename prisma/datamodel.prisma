type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  birthYear: Int!
  avatar: String
  role: Role! @default(value: USER)
  favoriteWallpapers: [FavoriteWallpaper!]!
    @relation(name: "FavWallpaperToUser", onDelete: CASCADE)
  refreshTokens: [RefreshToken!]!
    @relation(name: "UserToRefreshToken", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

# User's favorites wallpapers
type FavoriteWallpaper {
  id: ID! @id
  wallpaperId: String! # This is the wallpaper's id given by the source, not the local id
  source: Source!
  user: User! @relation(name: "FavWallpaperToUser")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type RefreshToken {
  id: ID! @id
  user: User! @relation(name: "UserToRefreshToken")
  refreshToken: String! @unique
  accessToken: String! @unique
  expiresIn: String! # This is suppose to be a Long type but Prisma does not currently supports it
  revoke: Boolean @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum Source {
  PEXELS
  UNSPLASH
}
